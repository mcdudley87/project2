<%# Where you see one spell %>



<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Show One Spell and Details</title>
</head>
<body>

	<p>Name: <%= spell.name %></p> 
	<p><%= spell.desc %></p>
	<p>School: <%= spell.school.name %></p>
	<p>Classes: </p>
		<ul>
		<% spell.classes.forEach( function(cls) { %>
			<li><%= cls.name %> </li>
		<% }); %> 	
		</ul>
	<p>Components: <%= spell.components %></p>
	<p>Range: <%= spell.range %> </p> 
	<p>Ritual: <%= spell.ritual %> </p> 
	<p>Duration: <%= spell.duration %> </p> 
	<p>Players Handbook Page: <%= spell.page %> </p> 
	<p> <%= spell.url%> </p> 
	


	<%# THIS NEEDS FIXING%>
	<form method="POST" action="/characters/<%=cid%>/grimoires/<%=gid%>/spells/<%=sid%>">
		<input hidden type="text" name="name" value="<%= spell.name %>">
		<input hidden type="text" name="url" value="<%= spell.url %>">
		<button class="btn btn-primary" type="submit">Learn Spell</button>
	</form>
	<a href="/academy">Back</a>
	<%# LEARN SPELL ADDS TO USERS %>	
</body>
</html>

