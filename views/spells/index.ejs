<%# THIS IS WHERE YOU SEE SPELLS IN YOUR GRIMOIRE %>


<h2>Spells in this book:</h2>

<% grimoire.spells.forEach(function(spell) { %>
	<p><%= spell.name %></p>
<% }); %>





<h2>Add a spell...</h2>

<% spells.forEach(function(spell) { %>
	<% var spellArray = spell.url.split('/'); %>
	<% var index = spellArray[spellArray.length -1]; %>
	<p>
		<a href="/academySpell/<%= index %>">
			 <%= spell.name %> 
		</a>		
	</p>
			
<% }); %>



